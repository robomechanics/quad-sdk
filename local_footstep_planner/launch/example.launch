<launch>
        <rosparam command="load" file="$(find local_footstep_planner)/../config/project_params.yaml"/>

        <!-- Launch the node to generate simple terrain -->
		<node pkg="global_body_planner" type="simple_terrain" name="simple_terrain" output="screen" />

        <!-- Launch the node to publish the global body plan -->
        <node name="global_body_planner" pkg="global_body_planner" type="global_body_planner_node" output="screen"/>

        <!-- Launch the node to publish the local footstep plan -->
        <node name="local_footstep_planner" pkg="local_footstep_planner" type="local_footstep_planner_node" output="screen"/>

 		<!-- Launch the grid map visualizer -->
		<node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen">
		  <rosparam command="load" file="$(find global_body_planner)/config/simple_terrain.yaml" />
		</node>

        <!-- Launch the nodes to publish all the robot tfs and visualize in rviz -->
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find global_body_planner)/rviz/example_with_terrain.rviz"/>

</launch>