<launch>
    <rosparam command="load" file="$(find spirit_utils)/../config/project_params.yaml"/>

    <arg name="with_gazebo" default="false"/>

    <group if="$(arg with_gazebo)">
        <rosparam param="terrain_map_publisher/map_data_source"> "internal" </rosparam>
    </group>

    <!-- Launch the node to generate simple terrain -->
    <node pkg="spirit_utils" type="terrain_map_publisher_node" name="terrain_map_publisher" output="screen" />
    
    <!-- Launch the node to publish the global body plan -->
    <node name="global_body_planner" pkg="global_body_planner" type="global_body_planner_node" output="screen"/>

    <!-- Launch the node to publish the local footstep plan -->
    <node name="local_footstep_planner" pkg="local_footstep_planner" type="local_footstep_planner_node" output="screen"/>

    <!-- Launch the grid map visualizer -->
    <node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen"/>

    <!-- Point the robot description to this URDF (which has meshes attached) -->
    <param name="robot_description" command="cat $(find spirit_description)/urdf/spirit_meshes.urdf" />

    <!-- Launch the nodes to publish all the robot tfs and visualize in rviz -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="joint_states" to="/mcu/state/jointURDF"/>
    </node>

    <!-- Launch the node to publish the visual topics for the plans -->
    <node name="rviz_interface" pkg="spirit_utils" type="rviz_interface_node" output="screen"/>

    <!-- Launch the nodes to publish all the robot tfs and visualize in rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find spirit_utils)/rviz/example_with_terrain.rviz"/>
</launch>
