<launch>
    <!-- Launch RealSense D435i Camera Node -->
    <node name="realsense2_camera" pkg="realsense2_camera" type="realsense2_camera_node" output="screen">
        <param name="enable_depth" type="bool" value="true"/>
        <param name="enable_color" type="bool" value="true"/>
        <param name="enable_imu" type="bool" value="true"/>
        <param name="pointcloud.enable" type="bool" value="true"/>
    </node>

    <!-- Launch the realsense_grid_map_node -->
    <node name="realsense_grid_map_node" pkg="realsense_grid_map" type="realsense_grid_map_node" output="screen"/>

    <!-- Launch Quad-SDK Gazebo Simulation -->
    <include file="$(find quad_utils)/launch/quad_gazebo.launch" />
</launch>