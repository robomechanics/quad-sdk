<launch>
  <node pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
    <rosparam>
      axis_linear:
        x: 1
        y: 2
      scale_linear:
        x: 1.0
        y: 4.0
      axis_angular: 0
      scale_angular: 3.0
      enable_button: 0
    </rosparam>
  </node>

  <test test-name="holonomic_joy" pkg="teleop_twist_joy" type="test_joy_twist.py">
    <rosparam>
      publish_joy:
        axes: [ 0.3, 0.4, 0.5 ]
        buttons: [ 1 ]
      expect_cmd_vel:
        linear: { x: 0.4, y: 2.0, z: 0 }
        angular: { x: 0, y: 0, z: 0.9 }
    </rosparam>
  </test>
</launch>
